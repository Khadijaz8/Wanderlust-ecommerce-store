    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id%>" class="listings_link">
    <div class="card col listing-card" style="width: 20rem;">
      <img src="<%= listing.image.url %>" class="card-img-top"style="height: 20rem;"  alt="...">
      <div class="card-img-overlay"><%= listing.title %></div>
      <div class="card-body">
        <p class="card-text"><b><%= listing.title %></b></p>
        <p class="price">Rs  <%= listing.price ? listing.price.toLocaleString("en-PK") : "N/A" %>/- night</p>
    
        <% let afterTaxPrice=listing.price +(listing.price*18)/100%> 
         <p class="afterTaxPrice">Rs  <%= afterTaxPrice ? afterTaxPrice.toLocaleString("en-PK") : "N/A" %>/- night</p>
      
      </div>

    </div>
    <% } %>
  </a>
  </div>
  
    
<script>
let tax=document.getElementById("switchCheckDefault");
tax.addEventListener("click",()=>{
  let price=document.getElementsByClassName("price");
  let afterTaxPrice=document.getElementsByClassName("afterTaxPrice");
  for(let i=0; i<price.length; i++){
    if(afterTaxPrice[i].style.display!="inline"){
      afterTaxPrice[i].style.display="inline";
      price[i].style.display="none";
    }else{
      afterTaxPrice[i].style.display="none";
      price[i].style.display="inline";
    }
  }
});
</script>